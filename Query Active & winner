رکوئست ها براساس مبلغ و شهر
SELECT 
    o.id AS request_id, 
    o.price, 
    o.launched_at AS request_date, 
    o.city,
    o.status 
FROM alopeyk.orders o
LEFT JOIN etl.unique_orders uo ON uo.order_id = o.id
WHERE o.city = 'shiraz'
and date(request_date) >= curdate() - interval 7 day;
