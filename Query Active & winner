MAU اکتیو ماهانه
SELECT DISTINCT courier_id
FROM orders
WHERE deleted_at IS NULL
    AND status IN ('finished', 'delivered')
    AND launched_at BETWEEN '2024-12-21 00:00:00' AND '2025-01-19 23:59:59' 
    --AND city IN ('tehran')
-------------------------------------------------------------------------------------------------------------------------------------------


avg price weeklly

SELECT 
    CONCAT(
        DATE_FORMAT(week_start_date, '%Y-%m-%d'),
        ' تا ',
        DATE_FORMAT(DATE_ADD(week_start_date, INTERVAL 6 DAY), '%Y-%m-%d')
    ) AS week_range,
    AVG(price) AS `Average Order Value - IRT`,
    AVG(c_ratio) AS `Commission Ratio %`
FROM (
    SELECT 
        o.price,
        o.launched_at,
        ABS(t.amount) / NULLIF(o.price, 0) AS c_ratio,
        DATE_ADD('2025-03-21', INTERVAL FLOOR(DATEDIFF(o.launched_at, '2025-03-21') / 7) WEEK) AS week_start_date
    FROM orders o
    LEFT JOIN alopeyk.transactions t 
        ON o.id = t.order_id
        AND t.subject = 'commission'
        AND t.deleted_at IS NULL
    WHERE 
        o.deleted_at IS NULL
        AND o.status IN ('delivered', 'finished')
        AND o.launched_at BETWEEN '2025-03-21' AND '2025-04-20'
        AND o.transport_type IN ('motor_taxi')
) AS virtual_table
GROUP BY week_start_date
ORDER BY week_start_date;
-----------------------------------------------------------------------------------------------------------------------------

میانگین مبلغ درخواست ها هر سوریس جداگانه
SELECT AVG(price) AS `AVG(price)`
FROM orders
WHERE deleted_at IS NULL
  AND status IN ('delivered', 'finished')
  --AND customer_id in ('15809086') --zap
  --AND customer_id in ('15886636') -- tapsi
 --AND customer_id not in ('15809086', '15886636') and transport_type = 'motor_taxi' --motor-taxi
 --AND customer_id not in ('15809086', '15886636') and transport_type in ('cargo', 'cargo_s') --alovanet
  AND customer_id not in ('15809086', '15886636') and transport_type = 'motorbike' --alopeyk
  AND DATE(created_at) BETWEEN '2025-03-01' AND '2025-03-07';
