ایدی درخواست ها به همراه مبلغ 
SELECT id,
       launched_at,
       price
FROM alopeyk.orders  
WHERE status IN ('finished', 'delivered')
  AND city = 'mashhad'
  AND DATE(created_at) >= CURRENT_DATE - INTERVAL 5 DAY;
