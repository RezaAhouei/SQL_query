    COUNT(DISTINCT courier_id) AS `Total Active Couriers`
FROM orders
WHERE deleted_at IS NULL
    AND status IN ('finished', 'delivered')
    AND launched_at BETWEEN '2024-11-21' AND '2024-12-20' 
    AND city in ('tehran')
